<div class="card col-sm-10 col-md-5 col-lg-3 p-0 ml-3 mr-3 mt-4 ">
  <a href="{{url}}"><img src={{feature_image}} class="card-img-top" alt="..."></a>
  <div class="card-body ">
    <h5 class="text-center card-title"> <a class="text-body" href="{{url}}">{{title}} </a></h5>
    <p class="text-center card-text "> <a class="text-dark" href="{{url}}">{{excerpt characters="140"}}</a></p>
    <div class="entry-footer">
      <div class="author">
          <a href="{{primary_author.url}}">
            <img class="avatar" src="{{primary_author.profile_image}}" alt="imagen de autor">
            <span class="mt-4">{{primary_author.name}}</span>
          </a>
      </div>
      <small class="text-muted mt-1"> {{date published_at format="MMMM DD, YYYY"}} </small>
    </div>
  </div>
</div>